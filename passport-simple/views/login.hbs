<h1>Login</h1>
{{#each flash}}
<p>{{{this}}}</p>
{{/each}}

<form action="login" method="POST">
    <div>
        <label>Username:</label>
        <input type="text" name="username" />
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password" />
    </div>
    <input type="submit" value="Submit" />
</form>
